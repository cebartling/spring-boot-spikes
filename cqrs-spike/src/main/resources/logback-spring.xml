<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Console appender with pattern -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Vault-specific logging -->
    <logger name="org.springframework.vault" level="INFO"/>
    <logger name="com.pintailconsultingllc.cqrsspike.infrastructure.vault" level="INFO"/>
    <logger name="com.pintailconsultingllc.cqrsspike.service.SecretService" level="DEBUG"/>

    <!-- Reduce noise from Vault health checks and lease management -->
    <logger name="org.springframework.vault.core.lease" level="WARN"/>

    <!-- Application logging -->
    <logger name="com.pintailconsultingllc.cqrsspike" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
