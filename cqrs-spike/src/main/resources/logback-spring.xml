<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Console appender with trace context (plain format for local development) -->
    <appender name="CONSOLE_PLAIN" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [trace_id=%X{traceId:-},span_id=%X{spanId:-}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- JSON console appender for Docker/Loki integration -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <providers>
                <timestamp/>
                <version/>
                <message/>
                <loggerName/>
                <threadName/>
                <logLevel/>
                <logLevelValue/>
                <callerData/>
                <stackTrace/>
                <context/>
                <mdc/>
                <tags/>
                <logstashMarkers/>
            </providers>
            <customFields>{"service":"cqrs-spike","environment":"local"}</customFields>
        </encoder>
    </appender>

    <!-- File appender for local debugging (JSON format) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/application.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"service":"cqrs-spike","environment":"local"}</customFields>
        </encoder>
    </appender>

    <!-- Vault-specific logging -->
    <logger name="org.springframework.vault" level="INFO"/>
    <logger name="com.pintailconsultingllc.cqrsspike.infrastructure.vault" level="INFO"/>
    <logger name="com.pintailconsultingllc.cqrsspike.service.SecretService" level="DEBUG"/>

    <!-- Reduce noise from Vault health checks and lease management -->
    <logger name="org.springframework.vault.core.lease" level="WARN"/>

    <!-- Application logging -->
    <logger name="com.pintailconsultingllc.cqrsspike" level="INFO"/>

    <!-- Spring profile for local development (plain logs for readability) -->
    <springProfile name="local,default">
        <root level="INFO">
            <appender-ref ref="CONSOLE_PLAIN"/>
        </root>
    </springProfile>

    <!-- Spring profile for docker (JSON logs for Loki) -->
    <springProfile name="docker">
        <root level="INFO">
            <appender-ref ref="CONSOLE_JSON"/>
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>
</configuration>
