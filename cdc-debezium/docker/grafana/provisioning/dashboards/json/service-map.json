{
  "title": "Service Map & Traces",
  "uid": "service-map",
  "tags": ["cdc", "tracing", "tempo"],
  "timezone": "browser",
  "refresh": "30s",
  "schemaVersion": 39,
  "panels": [
    {
      "id": 1,
      "title": "Service Dependency Graph",
      "type": "nodeGraph",
      "gridPos": { "x": 0, "y": 0, "w": 24, "h": 12 },
      "datasource": { "type": "tempo", "uid": "tempo" },
      "targets": [
        {
          "queryType": "serviceMap",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {},
        "overrides": []
      },
      "options": {}
    },
    {
      "id": 2,
      "title": "Trace Search",
      "type": "traces",
      "gridPos": { "x": 0, "y": 12, "w": 24, "h": 8 },
      "datasource": { "type": "tempo", "uid": "tempo" },
      "targets": [
        {
          "queryType": "traceql",
          "query": "{resource.service.name=\"cdc-consumer\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {},
        "overrides": []
      },
      "options": {}
    },
    {
      "id": 3,
      "title": "Span Duration Histogram",
      "type": "histogram",
      "gridPos": { "x": 0, "y": 20, "w": 12, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(traces_spanmetrics_latency_bucket{service=\"cdc-consumer\"}[5m])) by (le, span_name))",
          "legendFormat": "{{span_name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true }
      }
    },
    {
      "id": 4,
      "title": "Error Traces",
      "type": "table",
      "gridPos": { "x": 12, "y": 20, "w": 12, "h": 6 },
      "datasource": { "type": "tempo", "uid": "tempo" },
      "targets": [
        {
          "queryType": "traceql",
          "query": "{resource.service.name=\"cdc-consumer\" && status=error}",
          "limit": 10,
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {},
        "overrides": []
      },
      "options": {
        "showHeader": true,
        "cellHeight": "sm"
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {},
  "version": 1
}
