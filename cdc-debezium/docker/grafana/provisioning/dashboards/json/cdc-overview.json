{
  "annotations": {
    "list": [
      {
        "datasource": { "type": "loki", "uid": "loki" },
        "enable": true,
        "expr": "{service_name=\"cdc-consumer\"} |~ \"ERROR|WARN\"",
        "iconColor": "red",
        "name": "Error Annotations"
      }
    ]
  },
  "title": "CDC Pipeline Overview",
  "uid": "cdc-overview",
  "tags": ["cdc", "overview"],
  "timezone": "browser",
  "refresh": "10s",
  "schemaVersion": 39,
  "panels": [
    {
      "id": 1,
      "title": "Records Consumed (Rate)",
      "type": "stat",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(cdc_kafka_consumer_fetch_manager_records_consumed_rate) or sum(kafka_consumer_fetch_manager_records_consumed_rate) or vector(0)",
          "legendFormat": "records/sec",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "red", "value": 500 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "id": 2,
      "title": "Consumer Lag",
      "type": "gauge",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "max(cdc_kafka_consumer_fetch_manager_records_lag_max) or max(kafka_consumer_fetch_manager_records_lag_max) or vector(0)",
          "legendFormat": "lag",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "min": 0,
          "max": 10000,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": 0 },
              { "color": "yellow", "value": 1000 },
              { "color": "red", "value": 5000 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "auto",
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      }
    },
    {
      "id": 3,
      "title": "k6 CDC Success Rate",
      "type": "stat",
      "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "(k6_cdc_success_rate_rate or vector(0)) * 100",
          "legendFormat": "success %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 90 },
              { "color": "green", "value": 99 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "id": 4,
      "title": "Kafka Listener Latency (p99)",
      "type": "stat",
      "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, sum(rate(cdc_spring_kafka_listener_milliseconds_bucket[5m])) by (le)) or histogram_quantile(0.99, sum(rate(spring_kafka_listener_milliseconds_bucket[5m])) by (le)) or vector(0)",
          "legendFormat": "p99",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 100 },
              { "color": "red", "value": 500 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      }
    },
    {
      "id": 5,
      "title": "Records Consumed Over Time",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(cdc_kafka_consumer_fetch_manager_records_consumed_total[1m])) or sum(rate(kafka_consumer_fetch_manager_records_consumed_total[1m]))",
          "legendFormat": "Records/sec",
          "refId": "A"
        },
        {
          "expr": "sum(cdc_kafka_consumer_fetch_manager_records_lag_max) or sum(kafka_consumer_fetch_manager_records_lag_max)",
          "legendFormat": "Lag",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 20,
            "lineWidth": 1,
            "pointSize": 5,
            "showPoints": "auto",
            "spanNulls": false,
            "stacking": { "mode": "none", "group": "A" },
            "axisPlacement": "auto",
            "axisBorderShow": false,
            "scaleDistribution": { "type": "linear" }
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "single", "sort": "none" }
      }
    },
    {
      "id": 6,
      "title": "k6 Load Test Operations",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "rate(k6_pg_records_inserted_total[1m])",
          "legendFormat": "PostgreSQL Inserts/sec",
          "refId": "A"
        },
        {
          "expr": "rate(k6_mongo_documents_found_total[1m])",
          "legendFormat": "MongoDB Reads/sec",
          "refId": "B"
        },
        {
          "expr": "rate(k6_cdc_creates_total[1m])",
          "legendFormat": "CDC Creates/sec",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 20,
            "lineWidth": 1,
            "pointSize": 5,
            "showPoints": "auto",
            "spanNulls": false,
            "stacking": { "mode": "none", "group": "A" },
            "axisPlacement": "auto",
            "axisBorderShow": false,
            "scaleDistribution": { "type": "linear" }
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "single", "sort": "none" }
      }
    },
    {
      "id": 7,
      "title": "Kafka Listener Latency Distribution",
      "type": "heatmap",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(cdc_spring_kafka_listener_milliseconds_bucket[5m])) by (le) or sum(rate(spring_kafka_listener_milliseconds_bucket[5m])) by (le)",
          "format": "heatmap",
          "legendFormat": "{{le}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {},
        "overrides": []
      },
      "options": {
        "calculate": false,
        "cellGap": 1,
        "color": {
          "mode": "scheme",
          "scheme": "Oranges",
          "steps": 64
        },
        "yAxis": {
          "axisPlacement": "left",
          "reverse": false,
          "unit": "ms"
        }
      }
    },
    {
      "id": 8,
      "title": "End-to-End Latency (k6 Tests)",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "k6_cdc_e2e_latency_p50",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "k6_cdc_e2e_latency_p95",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "expr": "k6_cdc_e2e_latency_p99",
          "legendFormat": "p99",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 0,
            "lineWidth": 1,
            "pointSize": 5,
            "showPoints": "auto",
            "spanNulls": false,
            "stacking": { "mode": "none", "group": "A" },
            "axisPlacement": "auto",
            "axisBorderShow": false,
            "scaleDistribution": { "type": "linear" }
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "single", "sort": "none" }
      }
    },
    {
      "id": 9,
      "title": "Database Operation Latency (k6)",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 18, "w": 12, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "k6_pg_write_duration_p95",
          "legendFormat": "PostgreSQL Write p95",
          "refId": "A"
        },
        {
          "expr": "k6_mongo_read_duration_p95",
          "legendFormat": "MongoDB Read p95",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "fillOpacity": 10,
            "lineWidth": 1,
            "pointSize": 5,
            "showPoints": "auto",
            "spanNulls": false,
            "stacking": { "mode": "none", "group": "A" },
            "axisPlacement": "auto",
            "axisBorderShow": false,
            "scaleDistribution": { "type": "linear" }
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "single", "sort": "none" }
      }
    },
    {
      "id": 10,
      "title": "Recent Traces",
      "type": "table",
      "gridPos": { "x": 12, "y": 18, "w": 12, "h": 6 },
      "datasource": { "type": "tempo", "uid": "tempo" },
      "targets": [
        {
          "queryType": "search",
          "limit": 20,
          "filters": [
            { "id": "service-name", "operator": "=", "value": ["cdc-consumer"] }
          ],
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {},
        "overrides": []
      },
      "options": {
        "showHeader": true,
        "cellHeight": "sm"
      }
    }
  ],
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {},
  "version": 2
}
