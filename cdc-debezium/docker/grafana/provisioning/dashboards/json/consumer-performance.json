{
  "title": "Kafka Consumer Performance",
  "uid": "consumer-perf",
  "tags": ["cdc", "kafka", "consumer"],
  "timezone": "browser",
  "refresh": "10s",
  "schemaVersion": 39,
  "panels": [
    {
      "id": 1,
      "title": "Consumer Group Lag by Partition",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "kafka_consumer_records_lag{topic=~\"cdc\\\\..*\"}",
          "legendFormat": "{{topic}} - p{{partition}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10,
            "lineWidth": 1,
            "pointSize": 5,
            "showPoints": "auto",
            "spanNulls": false,
            "stacking": { "mode": "none", "group": "A" },
            "axisPlacement": "auto",
            "axisBorderShow": false,
            "scaleDistribution": { "type": "linear" }
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "single", "sort": "none" }
      }
    },
    {
      "id": 2,
      "title": "Records Consumed Rate",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(kafka_consumer_records_consumed_total[5m])) by (topic)",
          "legendFormat": "{{topic}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10,
            "lineWidth": 1,
            "pointSize": 5,
            "showPoints": "auto",
            "spanNulls": false,
            "stacking": { "mode": "none", "group": "A" },
            "axisPlacement": "auto",
            "axisBorderShow": false,
            "scaleDistribution": { "type": "linear" }
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "single", "sort": "none" }
      }
    },
    {
      "id": 3,
      "title": "Fetch Latency",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 8, "w": 8, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "kafka_consumer_fetch_latency_avg",
          "legendFormat": "avg",
          "refId": "A"
        },
        {
          "expr": "kafka_consumer_fetch_latency_max",
          "legendFormat": "max",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 0,
            "lineWidth": 1,
            "pointSize": 5,
            "showPoints": "auto",
            "spanNulls": false,
            "stacking": { "mode": "none", "group": "A" },
            "axisPlacement": "auto",
            "axisBorderShow": false,
            "scaleDistribution": { "type": "linear" }
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "single", "sort": "none" }
      }
    },
    {
      "id": 4,
      "title": "Bytes Consumed",
      "type": "timeseries",
      "gridPos": { "x": 8, "y": 8, "w": 8, "h": 6 },
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "targets": [
        {
          "expr": "sum(rate(kafka_consumer_bytes_consumed_total[5m]))",
          "legendFormat": "bytes/sec",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "fillOpacity": 10,
            "lineWidth": 1,
            "pointSize": 5,
            "showPoints": "auto",
            "spanNulls": false,
            "stacking": { "mode": "none", "group": "A" },
            "axisPlacement": "auto",
            "axisBorderShow": false,
            "scaleDistribution": { "type": "linear" }
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "single", "sort": "none" }
